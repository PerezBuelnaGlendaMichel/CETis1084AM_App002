<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.cetis108.cetis1084am_app002.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 1"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/txtNumero1"
        android:layout_alignRight="@+id/txtNumero1"
        android:layout_alignEnd="@+id/txtNumero1"
        android:layout_marginTop="29dp"
        android:id="@+id/txtNumero2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/txtNumero1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:text="Num 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNumero2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView3"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblResultado"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="Dividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDividir"
        android:onClick="btnDividir_click"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnSuma"
        android:layout_alignStart="@+id/btnSuma" />

    <Button
        android:text="Resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnResta"
        android:onClick="btnResta_click"

        android:layout_alignBaseline="@+id/btnDividir"
        android:layout_alignBottom="@+id/btnDividir"
        android:layout_alignRight="@+id/txtNumero2"
        android:layout_alignEnd="@+id/txtNumero2" />

    <Button
        android:text="Suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSuma"
        android:onClick="btnSuma_click"

        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignBaseline="@+id/btnMultiplicacion"
        android:layout_alignBottom="@+id/btnMultiplicacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Multiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMultiplicacion"
        android:onClick="btnMultiplicacion_click"
        android:layout_above="@+id/lblResultado"
        android:layout_alignLeft="@+id/btnResta"
        android:layout_alignStart="@+id/btnResta"
        android:layout_marginBottom="37dp" />
</RelativeLayout>
